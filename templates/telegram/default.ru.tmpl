{{ define "telegram.default" }}
{{ range .Alerts }}
  {{- if eq .Status "firing" -}}
    {{- if eq .Labels.severity "critical" -}}
      &#x1F525;<b>FIRING</b>&#x1F525;  <!-- Огненный значок для критических алертов -->
    {{- else if eq .Labels.severity "warning" -}}
      &#x26A0;<b>WARNING</b>&#x26A0;    <!-- Желтый треугольник для предупреждений -->
    {{- else if eq .Labels.severity "info" -}}
      &#x1F4C8;<b>INFO</b>&#x1F4C8;  <!-- Голубая диаграмма для информационных алертов -->
    {{- else -}}
      &#x1F535;<b>ANY</b>&#x1F535;  <!-- Синий круг для других алертов -->
    {{- end -}}
  {{- else -}}
    &#x1F499;<b>ALL GOOD</b>&#x1F499;        <!-- Голубое сердечко для разрешенных алертов -->
  {{- end -}}

  <b>{{ .Labels.alertname }}</b>

  {{- if .Labels.severity }}
    <b>Severity:</b> {{ .Labels.severity }}
  {{- end }}

  {{- if .Labels.ds_name }}
    <b>Database:</b> {{ .Labels.ds_name }}
    {{- if .Labels.ds_group }}
      <b>Database group:</b> {{ .Labels.ds_group }}
    {{- end }}
  {{- end }}

  {{- if .Labels.ds_id }}
    <b>Cluster UUID: </b><code>{{ .Labels.ds_id }}</code>
  {{- end }}

  {{- if .Labels.instance }}
    <b>DBaaS region:</b> {{ .Labels.instance }}
  {{- end }}

  {{- if .Annotations.message }}
    {{ .Annotations.message }}
  {{- end }}

  {{- if .Annotations.summary }}
    {{ .Annotations.summary }}
  {{- end }}

  {{- if .Annotations.description }}
    {{ .Annotations.description }}
  {{- end }}

{{ end }}
{{ end }}